<!doctype html>
<html lang="en" class="scroll-pt-24">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{ title }} | {{ site.name }}</title>
    <meta name="description" content="{{ description or site.description }}" />
    <link rel="canonical" href="{{ site.baseUrl }}{{ page.url }}" />

    <meta property="og:type" content="website" />
    <meta property="og:site_name" content="{{ site.name }}" />
    <meta property="og:title" content="{{ title }}" />
    <meta property="og:description" content="{{ description or site.description }}" />
    <meta property="og:url" content="{{ site.baseUrl }}{{ page.url }}" />

    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content="{{ title }}" />
    <meta name="twitter:description" content="{{ description or site.description }}" />

    <link rel="stylesheet" href="/styles/tailwind.generated.css" />
    <script src="/js/calculator.js" defer></script>
    <script src="/js/alpine.js" defer></script>
    <script src="/js/site.js" defer></script>
    {% include "components/seo-jsonld.njk" %}
    {% include "components/analytics.njk" %}
  </head>
  <body class="relative min-h-screen bg-slate-50 text-slate-900 selection:bg-emerald-100 selection:text-emerald-900">
    <div class="fixed inset-0 -z-10 h-full w-full bg-slate-50">
        <div class="absolute top-0 right-0 -mr-20 -mt-20 h-[500px] w-[500px] rounded-full bg-emerald-50/50 blur-[100px]"></div>
        <div class="absolute bottom-0 left-0 -ml-20 -mb-20 h-[500px] w-[500px] rounded-full bg-blue-50/50 blur-[100px]"></div>
    </div>

    <a class="sr-only focus:not-sr-only focus:absolute focus:left-6 focus:top-6 rounded-xl bg-white px-4 py-3 text-sm font-semibold text-slate-900 shadow-xl ring-1 ring-slate-900/10" href="#main">Skip to content</a>

    <header class="sticky top-0 z-50 border-b border-slate-200/50 bg-white/80 backdrop-blur-xl transition-all duration-300">
      <div class="mx-auto flex max-w-6xl items-center justify-between px-6 py-4">
        <a class="flex items-center gap-2 text-lg font-bold tracking-tight text-slate-900 transition-opacity hover:opacity-80" href="/">
          {{ site.name }}
        </a>
        <nav class="flex items-center gap-1 sm:gap-6">
          <a class="rounded-full px-4 py-2 text-sm font-medium text-slate-600 transition-all duration-200 hover:bg-slate-100 hover:text-slate-900" href="/">Home</a>
          <a class="rounded-full px-4 py-2 text-sm font-medium text-slate-600 transition-all duration-200 hover:bg-slate-100 hover:text-slate-900" href="/blog/">Blog</a>
        </nav>
      </div>
    </header>

    <main id="main" class="mx-auto w-full max-w-6xl px-6 py-12 md:py-20">
      {{ content | safe }}
    </main>

    <footer class="border-t border-slate-200 bg-white/50 backdrop-blur-sm">
      <div class="mx-auto max-w-6xl px-6 py-12 text-sm text-slate-500">
        <div>
          <p class="font-semibold text-slate-900">Disclaimer</p>
          <p class="mt-2 leading-relaxed">
            Content is for informational purposes only. We do our best to keep information accurate,
            but make no guarantees and assume no liability for decisions made based on this site.
          </p>
        </div>
        <div class="mt-12 flex flex-col items-center justify-between gap-4 border-t border-slate-100 pt-8 sm:flex-row">
            <p class="text-xs text-slate-400">&copy; {{ "" | date("%Y") }} {{ site.name }}. All rights reserved.</p>
        </div>
      </div>
    </footer>
  </body>
</html>
<div class="mx-auto max-w-7xl" x-data="calculator" x-init="init()">
  <div class="grid gap-8 lg:grid-cols-12 lg:gap-12">
    
    <div class="space-y-8 lg:col-span-7">
      <div class="mb-8">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900">Configure your space</h2>
        <p class="mt-2 text-base text-slate-500">Enter your dimensions to unlock compatible gear.</p>
      </div>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">1</div>
            <h3 class="text-lg font-semibold text-slate-900">Room Dimensions</h3>
          </div>
          <span class="text-xs font-medium uppercase tracking-wider text-slate-400">In Feet</span>
        </div>
        
        <div class="mt-6 grid gap-6 md:grid-cols-3">
          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-depth">Depth</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-depth" type="number" min="6" step="0.5" x-model.number="depth" placeholder="12" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none">ft</span>
            </div>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="depth && depth < 12" x-transition>Depth &lt; 12ft limits radar.</p>
          </div>

          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-width">Width</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-width" type="number" min="6" step="0.5" x-model.number="width" placeholder="10" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none">ft</span>
            </div>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="players === 'mixedRightyLefty' && width && width < 10" x-transition>Mixed play needs &gt; 10ft.</p>
          </div>

          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-height">Height</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-height" type="number" min="7" step="0.5" x-model.number="height" placeholder="9" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none">ft</span>
            </div>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="height && height < 8.5" x-transition>&lt; 8.5ft limits driver.</p>
          </div>
        </div>
      </section>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
             <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">2</div>
             <h3 class="text-lg font-semibold text-slate-900">Players</h3>
          </div>
        </div>
        
        <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <label class="cursor-pointer relative flex items-center gap-3 rounded-2xl border border-slate-200 p-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="players === 'rightyOnly' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="players" value="rightyOnly" x-model="players" />
            <span class="font-medium text-slate-900">Right-handed only</span>
          </label>
          <label class="cursor-pointer relative flex items-center gap-3 rounded-2xl border border-slate-200 p-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="players === 'mixedRightyLefty' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="players" value="mixedRightyLefty" x-model="players" />
            <span class="font-medium text-slate-900">Mixed Righty/Lefty</span>
          </label>
        </div>
      </section>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
             <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">3</div>
             <h3 class="text-lg font-semibold text-slate-900">Budget Goal</h3>
          </div>
        </div>
        
        <div class="mt-6 grid grid-cols-1 gap-3 sm:grid-cols-2">
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === '1000' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">$1,000 Starter</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="1000" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === '5000' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">$5,000 Solid</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="5000" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === 'unlimited' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">Unlimited</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="unlimited" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === 'custom' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">Custom</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="custom" x-model="budgetPreset" />
          </label>
        </div>
        
        <div class="mt-4" x-show="budgetPreset === 'custom'" x-cloak x-transition>
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="budget-custom">Enter Amount</label>
            <div class="relative">
                <span class="absolute left-4 top-3.5 text-slate-400">$</span>
                <input class="w-full rounded-2xl border-0 bg-slate-50 py-3.5 pl-8 pr-4 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="budget-custom" type="number" min="500" step="100" x-model.number="budgetCustom" placeholder="7500" />
            </div>
        </div>
      </section>
      
      <section class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-8 py-6 shadow-sm">
        <div>
           <p class="font-semibold text-slate-900">Strict Compatibility Mode</p>
           <p class="text-sm text-slate-500">Hide items that don't fit perfectly.</p>
        </div>
        <label class="relative inline-flex cursor-pointer items-center">
            <input type="checkbox" x-model="strictFit" class="peer sr-only">
            <div class="h-7 w-12 rounded-full bg-slate-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500/20 peer-checked:bg-emerald-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all"></div>
        </label>
      </section>

      <div class="rounded-2xl border border-amber-200 bg-amber-50 p-6 text-sm text-amber-800 shadow-sm" x-show="warningMessages.length" x-cloak x-transition>
        <div class="flex items-center gap-2 font-semibold">
            <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
            Room Considerations
        </div>
        <ul class="mt-3 list-inside list-disc space-y-1 ml-1 opacity-90">
          <template x-for="warning in warningMessages" :key="warning">
            <li x-text="warning"></li>
          </template>
        </ul>
      </div>
    </div>

    <div class="lg:col-span-5">
      <div class="sticky top-24 space-y-6">
        <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-xl shadow-slate-200/50">
           <div class="bg-slate-50/50 p-6 backdrop-blur-sm">
             {% include "components/warnings.njk" %}
             {% include "components/room-score.njk" %}
           </div>

           <div class="p-6">
             <div class="transition-all duration-300 ease-out" x-bind:class="hasBasics && !loading ? 'opacity-100 translate-y-0' : 'opacity-40 blur-[2px] pointer-events-none'">
                <div class="space-y-6">
                  <template x-for="rec in recommendations()" :key="rec.key">
                    <div class="animate-fade-in">
                      <template x-if="rec.item">
                        {% include "components/product-card.njk" %}
                      </template>
                      <template x-if="!rec.item">
                        {% include "components/result-card-empty.njk" %}
                      </template>
                    </div>
                  </template>
                </div>
             </div>

             <div class="flex items-center justify-center py-12 text-sm text-slate-500" x-show="loading" x-cloak>
                <svg class="mr-3 h-5 w-5 animate-spin text-slate-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"><circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle><path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path></svg>
                Analyzing gear...
             </div>
             
             <div class="flex flex-col items-center justify-center rounded-2xl border-2 border-dashed border-slate-100 bg-slate-50/50 py-12 text-center text-sm text-slate-500" x-show="!hasBasics && !loading" x-cloak>
                <div class="mb-3 rounded-full bg-slate-100 p-3">
                    <svg class="h-6 w-6 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" /></svg>
                </div>
                <p class="font-medium text-slate-900">Awaiting Dimensions</p>
                <p class="mt-1 max-w-[200px]">Enter your room details to see the best fit.</p>
             </div>
           </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="mt-20 border-t border-slate-100 py-8">
  {% include "components/ads-slot.njk" %}
</div>
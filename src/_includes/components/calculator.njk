<div class="mx-auto max-w-7xl" x-data="calculator" x-init="init()" data-products='{{ {
  monitors: monitors,
  enclosures: enclosures,
  mats: mats,
  projectors: projectors,
  pcs: pcs
} | dump | replace("
","") }}' {% if calculatorDefaults %}data-defaults='{{ calculatorDefaults | dump | replace("
","") }}'{% endif %}>
  <div class="grid gap-8 lg:grid-cols-12 lg:gap-12">
    
    <div class="space-y-8 lg:col-span-7">
      <div class="mb-8">
        <h2 class="text-3xl font-bold tracking-tight text-slate-900">Configure your space</h2>
        <p class="mt-2 text-base text-slate-500">Enter your dimensions to generate a room compatibility report.</p>
      </div>
      <div class="inline-flex rounded-2xl border border-slate-200 bg-white p-1 shadow-sm">
        <button class="rounded-2xl px-4 py-2 text-xs font-semibold uppercase tracking-wide transition-all duration-200 ease-out" type="button" :class="unit === 'ft' ? 'bg-emerald-700 text-white shadow-sm' : 'text-slate-500 hover:text-slate-700'" @click="unit = 'ft'">Feet</button>
        <button class="rounded-2xl px-4 py-2 text-xs font-semibold uppercase tracking-wide transition-all duration-200 ease-out" type="button" :class="unit === 'm' ? 'bg-emerald-700 text-white shadow-sm' : 'text-slate-500 hover:text-slate-700'" @click="unit = 'm'">Meters</button>
      </div>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
            <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">1</div>
            <h3 class="text-lg font-semibold text-slate-900">Room Dimensions</h3>
          </div>
          <span class="text-xs font-medium uppercase tracking-wider text-slate-400">In Feet</span>
        </div>
        
        <div class="mt-6 grid gap-6 md:grid-cols-3">
          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-depth">Depth</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-depth" type="number" min="2" step="0.1" x-model.number="depthInput" placeholder="12" @focus="activeDimension='depth'" @blur="activeDimension=null" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none" x-text="unit"></span>
            </div>
            <input class="mt-3 w-full accent-emerald-600" type="range" min="6" max="30" step="0.5" x-model.number="depthInput" @focus="activeDimension='depth'" @blur="activeDimension=null" />
            <p class="mt-2 text-xs text-slate-500" x-show="unit === 'm' && depthInput" x-text="`~${depthFt.toFixed(1)} ft`" x-cloak></p>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="depthFt && depthFt < 12" x-transition>Depth under 12 ft limits radar.</p>
          </div>

          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-width">Width</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-width" type="number" min="2" step="0.1" x-model.number="widthInput" placeholder="10" @focus="activeDimension='width'" @blur="activeDimension=null" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none" x-text="unit"></span>
            </div>
            <input class="mt-3 w-full accent-emerald-600" type="range" min="6" max="25" step="0.5" x-model.number="widthInput" @focus="activeDimension='width'" @blur="activeDimension=null" />
            <p class="mt-2 text-xs text-slate-500" x-show="unit === 'm' && widthInput" x-text="`~${widthFt.toFixed(1)} ft`" x-cloak></p>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="players === 'mixedRightyLefty' && widthFt && widthFt < 10" x-transition>Mixed play needs more width.</p>
          </div>

          <div class="relative">
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="room-height">Height</label>
            <div class="relative">
                <input class="w-full rounded-2xl border-0 bg-slate-50 px-4 py-3.5 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="room-height" type="number" min="2" step="0.1" x-model.number="heightInput" placeholder="9" @focus="activeDimension='height'" @blur="activeDimension=null" />
                <span class="absolute right-4 top-3.5 text-sm font-medium text-slate-400 pointer-events-none" x-text="unit"></span>
            </div>
            <input class="mt-3 w-full accent-emerald-600" type="range" min="7" max="14" step="0.5" x-model.number="heightInput" @focus="activeDimension='height'" @blur="activeDimension=null" />
            <p class="mt-2 text-xs text-slate-500" x-show="unit === 'm' && heightInput" x-text="`~${heightFt.toFixed(1)} ft`" x-cloak></p>
            <p class="mt-2 text-xs text-amber-600 font-medium" x-show="heightFt && heightFt < 8.5" x-transition>Ceiling under 8.5 ft limits driver.</p>
          </div>
        </div>
        <div class="mt-6 flex flex-wrap gap-2 text-xs text-slate-600">
          <span class="text-xs font-semibold uppercase tracking-wide text-slate-400">Common presets:</span>
          <button class="rounded-full border border-slate-200 px-3 py-1 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="setPreset('garage')">Single garage</button>
          <button class="rounded-full border border-slate-200 px-3 py-1 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="setPreset('bedroom')">Spare bedroom</button>
          <button class="rounded-full border border-slate-200 px-3 py-1 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="setPreset('basement')">Basement</button>
        </div>
      </section>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
             <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">2</div>
             <h3 class="text-lg font-semibold text-slate-900">Players</h3>
          </div>
        </div>
        
        <div class="mt-6 grid grid-cols-1 gap-4 sm:grid-cols-2">
          <label class="cursor-pointer relative flex items-center gap-3 rounded-2xl border border-slate-200 p-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="players === 'rightyOnly' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="players" value="rightyOnly" x-model="players" />
            <span class="font-medium text-slate-900">Right-handed only</span>
          </label>
          <label class="cursor-pointer relative flex items-center gap-3 rounded-2xl border border-slate-200 p-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="players === 'mixedRightyLefty' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="players" value="mixedRightyLefty" x-model="players" />
            <span class="font-medium text-slate-900">Mixed Righty/Lefty</span>
          </label>
        </div>
      </section>

      <section class="group rounded-3xl border border-slate-200 bg-white p-8 shadow-medium transition-all duration-300 hover:shadow-lg">
        <div class="flex items-center justify-between border-b border-slate-100 pb-4">
          <div class="flex items-center gap-3">
             <div class="flex h-8 w-8 items-center justify-center rounded-full bg-emerald-100 text-emerald-700 font-bold text-xs">3</div>
             <h3 class="text-lg font-semibold text-slate-900">Budget Goal</h3>
          </div>
        </div>
        
        <div class="mt-6 grid grid-cols-1 gap-3 sm:grid-cols-2">
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === '1000' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">$1,000 Starter</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="1000" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === '5000' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">$5,000 Solid</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="5000" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === 'unlimited' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">Unlimited</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="unlimited" x-model="budgetPreset" />
          </label>
          <label class="cursor-pointer relative flex items-center justify-between rounded-2xl border border-slate-200 px-5 py-4 transition-all duration-200 hover:border-emerald-500 hover:bg-emerald-50/30" :class="budgetPreset === 'custom' ? 'border-emerald-500 bg-emerald-50/50 ring-1 ring-emerald-500' : ''">
            <span class="font-medium text-slate-900">Custom</span>
            <input class="h-5 w-5 border-slate-300 text-emerald-600 focus:ring-emerald-500" type="radio" name="budget" value="custom" x-model="budgetPreset" />
          </label>
        </div>
        
        <div class="mt-4" x-show="budgetPreset === 'custom'" x-cloak x-transition>
            <label class="mb-2 block text-xs font-semibold uppercase tracking-wide text-slate-500" for="budget-custom">Enter Amount</label>
            <div class="relative">
                <span class="absolute left-4 top-3.5 text-slate-400">$</span>
                <input class="w-full rounded-2xl border-0 bg-slate-50 py-3.5 pl-8 pr-4 text-slate-900 ring-1 ring-slate-200 transition-all duration-200 placeholder:text-slate-400 focus:bg-white focus:ring-2 focus:ring-emerald-500" id="budget-custom" type="number" min="500" step="100" x-model.number="budgetCustom" placeholder="7500" />
            </div>
        </div>
      </section>
      
      <section class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-8 py-6 shadow-sm">
        <div>
           <p class="font-semibold text-slate-900">Strict Compatibility Mode</p>
           <p class="text-sm text-slate-500">Add extra clearance buffer guidance to the report.</p>
        </div>
        <label class="relative inline-flex cursor-pointer items-center">
            <input type="checkbox" x-model="strictFit" class="peer sr-only">
            <div class="h-7 w-12 rounded-full bg-slate-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500/20 peer-checked:bg-emerald-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all"></div>
        </label>
      </section>

      <section class="flex items-center justify-between rounded-2xl border border-slate-200 bg-white px-8 py-6 shadow-sm">
        <div>
           <p class="font-semibold text-slate-900">Show Swing Zone</p>
           <p class="text-sm text-slate-500">Visualize the space behind the player.</p>
        </div>
        <label class="relative inline-flex cursor-pointer items-center">
            <input type="checkbox" x-model="showSwingZone" class="peer sr-only">
            <div class="h-7 w-12 rounded-full bg-slate-200 peer-focus:outline-none peer-focus:ring-2 peer-focus:ring-emerald-500/20 peer-checked:bg-emerald-600 peer-checked:after:translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-[2px] after:left-[2px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all"></div>
        </label>
      </section>

      <div class="rounded-2xl border border-amber-200 bg-amber-50 p-6 text-sm text-amber-800 shadow-sm" x-show="warningMessages.length" x-cloak x-transition>
        <div class="flex items-center gap-2 font-semibold">
            <svg class="h-5 w-5 text-amber-600" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"/></svg>
            Room Considerations
        </div>
        <ul class="mt-3 list-inside list-disc space-y-1 ml-1 opacity-90">
          <template x-for="warning in warningMessages" :key="warning">
            <li x-text="warning"></li>
          </template>
        </ul>
      </div>
    </div>

    <div class="lg:col-span-5" id="results">
      <div class="sticky top-24 space-y-6">
        <div class="overflow-hidden rounded-3xl border border-slate-200 bg-white shadow-xl shadow-slate-200/50">
           <div class="bg-slate-50/50 p-6 backdrop-blur-sm">
             {% include "components/room-diagram.njk" %}
             {% include "components/warnings.njk" %}
             {% include "components/room-score.njk" %}
           </div>

           <div class="p-6">
             <div class="transition-all duration-300 ease-out" x-show="hasBasics" x-cloak>
                <section class="space-y-5 rounded-2xl border border-slate-200 bg-white p-6 shadow-sm">
                  <div class="flex flex-wrap items-start justify-between gap-4">
                    <div>
                      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Room Compatibility Report</p>
                      <h3 class="mt-2 text-xl font-semibold text-slate-900">Fit summary</h3>
                      <p class="mt-2 text-sm text-slate-500">Based on your current inputs.</p>
                    </div>
                    <div class="rounded-2xl bg-emerald-50 px-5 py-3 text-center">
                      <p class="text-3xl font-semibold text-emerald-700" x-text="roomScore.score"></p>
                      <p class="text-xs font-semibold uppercase tracking-wide text-emerald-700/80" x-text="roomScore.label"></p>
                    </div>
                  </div>

                  <div class="grid gap-4">
                    <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
                      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Top warnings</p>
                      <ul class="mt-3 list-inside list-disc space-y-1 text-sm text-slate-600" x-show="warningMessages.length">
                        <template x-for="warning in warningMessages" :key="warning">
                          <li x-text="warning"></li>
                        </template>
                      </ul>
                      <p class="mt-3 text-sm text-slate-500" x-show="!warningMessages.length">No major warnings yet.</p>
                    </div>

                    <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
                      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">What's limiting you most?</p>
                      <p class="mt-3 text-sm text-slate-600" x-text="roomScore.limiting"></p>
                    </div>

                    <div class="rounded-xl border border-slate-100 bg-slate-50 p-4">
                      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">How to improve your room fit</p>
                      <ul class="mt-3 list-inside list-disc space-y-1 text-sm text-slate-600">
                        <template x-for="tip in improvementTips" :key="tip">
                          <li x-text="tip"></li>
                        </template>
                      </ul>
                    </div>
                  </div>
                </section>
             </div>
             
             <div class="rounded-2xl border border-slate-200 bg-white p-6 text-left shadow-sm" x-show="!hasBasics" x-cloak x-transition>
                <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Get started in 3 steps</p>
                <ol class="mt-4 space-y-3 text-sm text-slate-600">
                  <li><span class="font-semibold text-slate-900">1.</span> Enter room depth, width, and height.</li>
                  <li><span class="font-semibold text-slate-900">2.</span> Choose who will play and your budget.</li>
                  <li><span class="font-semibold text-slate-900">3.</span> Review your room compatibility report.</li>
                </ol>
                <div class="mt-6">
                  <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Sample setups</p>
                  <div class="mt-3 flex flex-wrap gap-2">
                    <button class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="loadProfile('garage')">Single Car Garage</button>
                    <button class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="loadProfile('bedroom')">Spare Bedroom</button>
                    <button class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-600 transition-all duration-200 ease-out hover:border-emerald-500 hover:text-emerald-700" type="button" @click="loadProfile('basement')">Basement</button>
                  </div>
                </div>
             </div>
           </div>
        </div>
      </div>
    </div>
  </div>

  <section class="mt-16 space-y-10" x-show="hasBasics && recommendations.length" x-cloak>
    <div class="flex items-end justify-between gap-4">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Recommended Products</p>
        <h3 class="mt-2 text-2xl font-semibold text-slate-900">Top picks tailored to your room</h3>
      </div>
      <p class="text-sm text-slate-500">Updated instantly as you adjust inputs.</p>
    </div>

    <template x-for="category in recommendations" :key="category.key">
      <section class="space-y-4">
        <div class="flex items-center justify-between">
          <h4 class="text-lg font-semibold text-slate-900" x-text="category.title"></h4>
          <span class="text-xs uppercase tracking-wide text-slate-400">Best matches for your fit</span>
        </div>
        <div class="grid gap-4 md:grid-cols-3">
          <template x-for="rec in category.items" :key="rec.placeholder ? `placeholder-${category.key}-${$index}` : rec.item.id">
            <div x-data="{ rec }">
              <template x-if="!rec.placeholder">
                {% include "components/product-card.njk" %}
              </template>
              <template x-if="rec.placeholder">
                {% include "components/product-placeholder.njk" %}
              </template>
            </div>
          </template>
        </div>
      </section>
    </template>
  </section>

  <div class="fixed bottom-0 left-0 right-0 z-40 border-t border-slate-200 bg-white px-4 py-3 shadow lg:hidden">
    <a class="flex items-center justify-between gap-4" href="#results">
      <div>
        <p class="text-[10px] font-semibold uppercase tracking-wide text-slate-400">Room score</p>
        <p class="text-base font-semibold text-slate-900" x-text="roomScore.score"></p>
        <p class="text-xs text-slate-500" x-text="roomScore.label"></p>
      </div>
      <div class="text-right">
        <p class="text-[10px] font-semibold uppercase tracking-wide text-slate-400">Limiting factor</p>
        <p class="text-xs font-semibold text-slate-900" x-text="roomScore.limiting"></p>
        <span class="mt-1 inline-flex rounded-full px-2 py-1 text-[10px] font-semibold" :class="roomScore.score >= 7 ? 'bg-emerald-100 text-emerald-700' : roomScore.score >= 5 ? 'bg-amber-100 text-amber-700' : 'bg-rose-100 text-rose-700'">
          <span x-text="roomScore.score >= 7 ? 'Compatible' : roomScore.score >= 5 ? 'Needs compromises' : 'Challenging'"></span>
        </span>
      </div>
    </a>
  </div>
</div>

<div class="mt-20 border-t border-slate-100 py-8">
  {% include "components/ads-slot.njk" %}
</div>

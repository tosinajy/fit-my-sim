<section class="rounded-2xl border border-slate-200 bg-white p-4 text-sm shadow-sm transition-all duration-200 ease-out">
  <div class="flex items-start justify-between">
    <div>
      <p class="font-semibold text-slate-700">Room summary</p>
      <p class="mt-1 text-xs text-slate-500">Constraints based on the inputs you provided.</p>
    </div>
    <span class="rounded-full bg-emerald-700 px-2 py-1 text-xs font-semibold text-white" x-text="warningMessages.length ? warningMessages.length + ' alerts' : 'All clear'"></span>
  </div>
  <div class="mt-3" aria-live="polite">
    <ul class="list-disc space-y-1 pl-5 text-slate-600" x-show="warningMessages.length" x-transition>

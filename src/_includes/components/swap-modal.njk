<section class="fixed inset-0 z-50 flex items-center justify-center bg-slate-900/40 p-4" x-show="swapOpen" x-transition.opacity @keydown.escape.window="closeSwap()" @click.self="closeSwap()">
  <div class="w-full max-w-2xl rounded-2xl border border-slate-200 bg-white p-6 shadow-xl" role="dialog" aria-modal="true" aria-label="Other good fits" x-ref="swapPanel" @keydown.tab.prevent="trapSwapFocus($event)">
    <div class="flex items-start justify-between">
      <div>
        <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Other good fits</p>
        <h3 class="mt-2 text-xl font-semibold text-slate-900">Swap recommendation</h3>
        <p class="mt-2 text-sm text-slate-500">These options still fit your current room inputs.</p>
      </div>
      <button class="rounded-full border border-slate-200 px-3 py-1 text-xs font-semibold text-slate-500 hover:text-slate-700" type="button" @click="closeSwap()">Close</button>
    </div>

    <div class="mt-6 space-y-3">
      <template x-for="item in getAlternatives(swapCategory, 3)" :key="item.id">
        <button class="w-full rounded-2xl border border-slate-200 bg-white px-4 py-4 text-left transition-all duration-200 ease-out hover:shadow-md" type="button" @click="selectAlternative(swapCategory, item.id)">
          <div class="flex items-start justify-between gap-4">
            <div>
              <p class="text-sm font-semibold text-slate-900" x-text="item.name"></p>
              <p class="mt-1 text-xs text-slate-500" x-text="item.badge"></p>
            </div>
            <p class="text-sm font-semibold text-slate-900" x-text="formatPrice(item.price)"></p>
          </div>
        </button>
      </template>
      <div class="rounded-2xl border border-dashed border-slate-200 bg-slate-50 px-4 py-6 text-center text-sm text-slate-500" x-show="getAlternatives(swapCategory, 3).length === 0" x-cloak>
        No alternatives match the current constraints.
      </div>
    </div>
  </div>
</section>
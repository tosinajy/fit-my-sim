<section class="rounded-2xl border border-slate-200 bg-white p-5 shadow-sm">
  <div class="flex items-start justify-between">
    <div>
      <p class="text-xs font-semibold uppercase tracking-wide text-slate-400">Room diagram</p>
      <p class="mt-1 text-xs text-slate-500">Focus an input to highlight the matching dimension.</p>
    </div>
    <span class="rounded-full bg-slate-100 px-2 py-1 text-[10px] font-semibold uppercase tracking-wide text-slate-500">Live</span>
  </div>

  <div class="mt-4 rounded-xl border border-slate-200 bg-slate-50 p-4">
    <svg class="h-auto w-full" viewBox="0 0 420 260" role="img" aria-label="Room dimension diagram">
      <defs>
        <marker id="arrow" viewBox="0 0 10 10" refX="5" refY="5" markerWidth="6" markerHeight="6" orient="auto-start-reverse">
          <path d="M 0 0 L 10 5 L 0 10 z" fill="currentColor"></path>
        </marker>
      </defs>

      <rect x="70" y="40" width="280" height="160" rx="16" class="fill-white stroke-slate-200" stroke-width="2"></rect>

      <g :class="depthStatus === 'bad' ? 'text-rose-500' : depthStatus === 'warn' ? 'text-amber-500' : 'text-emerald-600'">
        <line x1="90" y1="210" x2="330" y2="210" class="stroke-current" :stroke-width="activeDimension === 'depth' ? 3 : 2" marker-end="url(#arrow)" marker-start="url(#arrow)"></line>
        <text x="210" y="232" text-anchor="middle" class="fill-current text-[10px] font-semibold uppercase tracking-wide">Depth</text>
      </g>

      <g :class="widthStatus === 'bad' ? 'text-rose-500' : widthStatus === 'warn' ? 'text-amber-500' : 'text-emerald-600'">
        <line x1="70" y1="20" x2="350" y2="20" class="stroke-current" :stroke-width="activeDimension === 'width' ? 3 : 2" marker-end="url(#arrow)" marker-start="url(#arrow)"></line>
        <text x="210" y="14" text-anchor="middle" class="fill-current text-[10px] font-semibold uppercase tracking-wide">Width</text>
      </g>

      <g :class="heightStatus === 'bad' ? 'text-rose-500' : heightStatus === 'warn' ? 'text-amber-500' : 'text-emerald-600'">
        <line x1="50" y1="40" x2="50" y2="200" class="stroke-current" :stroke-width="activeDimension === 'height' ? 3 : 2" marker-end="url(#arrow)" marker-start="url(#arrow)"></line>
        <text x="38" y="125" text-anchor="middle" class="fill-current text-[10px] font-semibold uppercase tracking-wide" transform="rotate(-90 38 125)">Height</text>
      </g>

      <g x-show="showSwingZone" x-transition.opacity>
        <circle cx="160" cy="150" r="48" class="fill-emerald-200/40"></circle>
        <circle cx="160" cy="150" r="8" class="fill-emerald-600"></circle>
        <rect x="156" y="158" width="8" height="26" class="fill-emerald-600"></rect>
        <line x1="160" y1="165" x2="145" y2="185" class="stroke-emerald-600" stroke-width="3" stroke-linecap="round"></line>
        <line x1="160" y1="165" x2="175" y2="185" class="stroke-emerald-600" stroke-width="3" stroke-linecap="round"></line>
        <line x1="160" y1="150" x2="140" y2="155" class="stroke-emerald-600" stroke-width="3" stroke-linecap="round"></line>
        <line x1="160" y1="150" x2="180" y2="155" class="stroke-emerald-600" stroke-width="3" stroke-linecap="round"></line>
      </g>
    </svg>
  </div>

  <div class="mt-3 flex items-center justify-between text-xs text-slate-500">
    <p>Depth, width, and height are evaluated against indoor fit thresholds.</p>
    <p class="text-slate-400" x-show="showSwingZone" x-transition.opacity>You need space behind you too.</p>
  </div>
</section>